<div class="container">
  <h1><%= @pet.name.capitalize %></h1>
    <%= link_to "Back to all pets", pets_path %>
  <br>
  <% if @pet.photo.attached? %>
    <%= cl_image_tag @pet.photo.key , height: 300, width: 400, crop: :fill %>
  <% end %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Name</th>
            <th>Species</th>
            <th>Name of my owner</th>
          </thead>
            <tr>
              <td><%= @pet.name.capitalize %></td>
              <td><%= @pet.species %></td>
              <td><%= @pet.pet_owner.name.capitalize %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div>
    <strong><%= link_to "Book this pet 🐶", new_pet_booking_path(@pet) %></strong>
  </div>

</div>
