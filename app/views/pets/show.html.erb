<div class="banner">
  <div class="banner-content d-flex align-items-center">
    <%= link_to pets_path do %>
    <div class="text-center btn-effect">
      <h4>Back to pets list</h4>
    </div>
    <% end %>

    <h1><%= @pet.name.capitalize %></h1>
    <!-- Put button to request booking here -->
    <%= link_to new_pet_booking_path(@pet) do %>
    <div class="text-center btn-effect">
      <h4>Book this pet 🐶</h4>
    </div>
    <% end %>
  </div>
</div>


<div class="container-fluid d-flex justify-content-around p-3">
  <div class="pet-card">
    <% if @pet.photo.attached? %>
      <%= cl_image_tag @pet.photo.key , height: 300, width: 400, crop: :fill %>
    <% end %>
    <br>
      <ul>
        <li>My name: <%= @pet.name.capitalize %></li>
        <li>My species: <%= @pet.species %></li>
        <li>The name of my owner: <%= @pet.pet_owner.name.capitalize %></li>
        <li>I live in: <%= @pet.pet_owner.address %></li>
      </ul>
  </div>

    <div
      id="map"
      style="width: 500px; height: 500px; margin: 4px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>







