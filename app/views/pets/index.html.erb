<div class="banner">
  <h1>The Petsitters</h1>
</div>


<% if @pets.any? %>
  <div class="container">
    <% @pets.each do |pet| %>
      <div class="col">
      <%= link_to pet_path(pet.id) do %>
        <div class="card">
          <%= cl_image_tag("tj9fpsysme14q0tarojl", width: 400, height: 300, crop: :fill) %>
          <h3>Hello, my name's <%= pet.name %>!</h3>
          <p>I am a <%= pet.species %></p>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>

<% else %>
    <div class="container text-center">
      <h4 class="header">Oh no! Such empty! There are no pets to take care of yet...</h4>
    </div>
<% end %>


<br>

    <div class="container text-center ">
        <h4><%= link_to 'Add my pet!', new_pet_path%></h4>
    </div>
