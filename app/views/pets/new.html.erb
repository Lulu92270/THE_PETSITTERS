<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Welcome in The Petsitter community !</h1>

      <%= simple_form_for @pet do |f| %>
        <%= f.input :name %>
        <%= f.input :species %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn' %>
      <% end %>
    </div>
  </div>
</div>
