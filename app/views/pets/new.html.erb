<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Welcome to The Petsitters community !</h1>

      <%= simple_form_for @pet do |f| %>
        <%= f.input :name %>
        <%= f.input :species %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn' %>
      <% end %>
    </div>
  </div>
</div>
